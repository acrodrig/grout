{
  "fmt": {
    "lineWidth": 180,
    "include": ["src/", "test/"]
  },
  "lock": false,
  "imports": {
    "@std/assert": "jsr:@std/assert@^0.226",
    "@std/fmt": "jsr:@std/fmt@^0.225",
    "@std/json": "jsr:@std/json@^0.224",
    "@std/http": "jsr:@std/http@^0.224",
    "@std/log": "jsr:@std/log@^0.224",
    "@std/media-types": "jsr:@std/media-types@^1.0",
    "ts-morph": "jsr:@ts-morph/ts-morph@^23.0.0"
  },
  "tasks": {
    "check": "deno check **/*.ts && deno fmt --check",
    "lint": "deno lint src test",
    "test": "deno test -A"
  }
}
