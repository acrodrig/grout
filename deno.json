{
  "fmt": {
    "lineWidth": 180,
    "include": ["src/", "test/"]
  },
  "lock": false,
  "imports": {
    "std/": "https://deno.land/std@0.224.0/",
    "ts_morph/": "https://deno.land/x/ts_morph@22.0.0/"
  },
  "tasks": {
    "check": "deno check **/*.ts && deno fmt --check",
    "lint": "deno lint src test",
    "test": "deno test -A"
  }
}
