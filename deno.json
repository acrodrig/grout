{
  "fmt": {
    "lineWidth": 180,
    "include": ["src/", "test/"]
  },
  "imports": {
    "std/": "https://deno.land/std@0.204.0/",
    "swc/": "https://deno.land/x/swc@0.2.1/"
  },
  "tasks": {
    "check": "deno check **/*.ts && deno fmt --check",
    "lint": "deno lint src test",
    "test": "deno test -A"
  }
}
